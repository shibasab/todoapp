{
  "name": "todoapp-workspace",
  "private": true,
  "workspaces": [
    "frontend",
    "backend",
    "shared"
  ],
  "scripts": {
    "format": "npm run --workspaces --if-present format",
    "format:check": "npm run --workspaces --if-present format:check",
    "lint": "npm run --workspaces --if-present lint:check",
    "lint:fix": "npm run --workspaces --if-present lint:fix",
    "typecheck": "npm run --workspaces --if-present typecheck",
    "test": "npm run --workspaces --if-present test",
    "quality": "npm run format:check && npm run lint && npm run typecheck && npm run test",
    "test:frontend": "npm run -w frontend test",
    "test:backend": "npm run -w backend test",
    "test:shared": "npm run -w shared test",
    "typecheck:frontend": "npm run -w frontend typecheck",
    "typecheck:backend": "npm run -w backend typecheck",
    "typecheck:shared": "npm run -w shared typecheck"
  }
}
