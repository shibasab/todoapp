{
  "name": "@todoapp/backend",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "bun --watch src/server.ts",
    "start": "bun src/server.ts",
    "prelint": "npm run prisma:generate",
    "lint": "oxlint --type-aware -c .oxlintrc.json src",
    "lint:check": "npm run lint",
    "lint:fix": "oxlint --fix --type-aware -c .oxlintrc.json src",
    "format": "oxfmt src tests vitest.config.ts tsconfig.json package.json",
    "format:check": "oxfmt --check src tests vitest.config.ts tsconfig.json package.json",
    "pretypecheck": "npm run prisma:generate",
    "typecheck": "tsgo",
    "pretest": "npm run prisma:generate",
    "test": "bun test || vitest run",
    "pretest:coverage": "npm run prisma:generate",
    "test:coverage": "vitest run --coverage",
    "prisma:generate": "prisma generate --schema prisma/schema.prisma",
    "prisma:db:push": "prisma db push --schema prisma/schema.prisma"
  },
  "dependencies": {
    "@prisma/client": "^6.17.1",
    "@todoapp/shared": "file:../shared",
    "bcryptjs": "^3.0.3",
    "hono": "^4.10.4",
    "jose": "^6.1.2",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@typescript/native-preview": "^7.0.0-dev.20250626",
    "@vitest/coverage-v8": "^4.0.16",
    "bun-types": "^1.3.2",
    "oxfmt": "^0.22.0",
    "oxlint": "^1.38.0",
    "oxlint-tsgolint": "^0.11.0",
    "prisma": "^6.17.1",
    "typescript": "^5.9.3",
    "vitest": "^4.0.16"
  },
  "engines": {
    "node": ">=24.0.0"
  }
}
