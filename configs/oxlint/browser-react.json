{
  "$schema": "../../node_modules/oxlint/configuration_schema.json",
  "extends": ["./base.json"],
  "plugins": ["react", "typescript", "import", "promise"],
  "rules": {
    "no-console": "warn",
    "import/no-cycle": "deny",
    "import/no-self-import": "deny",
    "react/exhaustive-deps": "warn",
    "react/jsx-key": "deny",
    "react/rules-of-hooks": "deny",
    "react/react-in-jsx-scope": "off",
    "typescript/restrict-template-expressions": ["deny", { "allowNever": true }]
  },
  "settings": {
    "react": {
      "version": "18.2"
    }
  },
  "env": {
    "browser": true
  }
}
