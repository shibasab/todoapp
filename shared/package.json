{
  "name": "@todoapp/shared",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "exports": {
    ".": "./src/index.ts"
  },
  "scripts": {
    "lint": "oxlint --type-aware -c ../configs/oxlint/node.json src",
    "lint:check": "npm run lint",
    "lint:fix": "oxlint --fix --type-aware -c ../configs/oxlint/node.json src",
    "format": "oxfmt src tests vitest.config.ts tsconfig.json package.json",
    "format:check": "oxfmt --check src tests vitest.config.ts tsconfig.json package.json",
    "typecheck": "tsgo",
    "test": "vitest run"
  },
  "dependencies": {
    "zod": "^4.1.11"
  },
  "devDependencies": {
    "@typescript/native-preview": "^7.0.0-dev.20260228.1",
    "oxfmt": "^0.22.0",
    "oxlint": "^1.50.0",
    "oxlint-tsgolint": "^0.11.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.16"
  },
  "engines": {
    "node": ">=24.0.0"
  }
}
